<Window x:Class="CrtProduccion.vistas.segUsuarioBRWfrm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrtProduccion.vistas"
        mc:Ignorable="d"
        Title="Consulta de Usuarios" Height="266.629" Width="248.808" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" ShowInTaskbar="False" WindowStyle="ToolWindow">

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="#FF0BC0C9"/>
        </LinearGradientBrush>
    </Window.Background>
    

    <Grid Height="218" VerticalAlignment="Top" Margin="0,0,2,0">

        <DataGrid x:Name="dataGrid" Margin="12,8,0,0" SelectionChanged="dataGrid_SelectionChanged" 
                  HorizontalAlignment="Left" Width="209" Height="166" VerticalAlignment="Top" IsReadOnly="True">
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <EventSetter Event="MouseDoubleClick" Handler="DataGrid_MouseDoubleClick"/>
                </Style>
            </DataGrid.RowStyle>

        </DataGrid>
        

        <Button x:Name="btnAceptar" HorizontalAlignment="Left" Margin="12,179,0,0" VerticalAlignment="Top" Width="103"  Height="38" ToolTip="Aceptar" Click="btnAceptar_Click">
            <Image x:Name="Aceptar_png" Height="32" Source="../Resources/Check.png" Stretch="Fill" Width="32" VerticalAlignment="Bottom"/>
        </Button>
        <Button x:Name="btnCancelar" HorizontalAlignment="Left" Margin="118,179,0,0" VerticalAlignment="Top" Width="103"  Height="38" ToolTip="Cancelar" Click="btnCancelar_Click">
            <Image x:Name="Cancelar_png" Height="32" Source="../Resources/Cancel.png" Stretch="Fill" Width="32" VerticalAlignment="Bottom"/>
        </Button>

    </Grid>
</Window>
